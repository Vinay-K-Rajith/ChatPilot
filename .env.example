# ChatPilot Environment Configuration Template
# Copy this file to .env and fill in your actual credentials

# MongoDB Configuration
# Get your connection string from MongoDB Atlas dashboard
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DB_NAME=chatpilot

# OpenAI Configuration  
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Twilio Configuration
# Get these from your Twilio Console: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=+1234567890

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Webhook Configuration (for production deployment)
# This should be your public HTTPS URL where Twilio can reach your webhook
WEBHOOK_URL=https://your-domain.com/api/webhook/twilio

# Security Configuration
# Generate a strong JWT secret for authentication
JWT_SECRET=your-strong-jwt-secret-here-min-256-bits

# Optional: Redis for real-time features and message queuing
# REDIS_URL=redis://localhost:6379

# Optional: File upload configuration
# FILE_UPLOAD_DIR=./uploads
# MAX_FILE_SIZE=10485760

# Optional: Rate limiting
# RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW=900000